				<ul class="nav secondary-nav">
          <% if !@user %>
          <li>
              <%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), {:style => "margin-top:5px; height:14px; display:inline-block", :class => "btn small primary"} %>
